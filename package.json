{
  "name": "subtitle-syncer",
  "version": "1.0.0",
  "description": "Sync existing subtitles to an existing video by converting the audio to speech and then matching the subtitles as good as possible",
  "main": "subtitle-syncer.ts",
  "scripts": {
    "start": "cp ./node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe ./ffmpeg && ts-node subtitle-syncer.ts",
    "start:example1": "cp ./node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe ./ffmpeg && ts-node subtitle-syncer.ts ./example/movie.mp4 ./example/movie_original.srt",
    "start:example2": "cp ./node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe ./ffmpeg && ts-node subtitle-syncer.ts ./example2/Alone-S02E05-Storm-Rising.mkv ./example2/Alone-S02E05-Storm-Rising.srt",
    "build": "npm run build-sources && npm run build-exe",
    "build-sources": "rm -rf build && tsc && cp ./node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe ./build/ffmpeg",
    "build-exe": "pkg --debug --config ./pkg-config.json build/subtitle-syncer.js"
  },
  "keywords": [
    "vosk",
    "subtitles",
    "sync",
    "video",
    "ffmpeg"
  ],
  "author": "Bert Verhelst",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@splayer/subtitle": "^2.0.3",
    "fastest-levenshtein": "^1.0.12",
    "lodash": "^4.17.21",
    "vosk": "^0.3.32",
    "when": "^3.7.8"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.176",
    "pkg": "^5.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
